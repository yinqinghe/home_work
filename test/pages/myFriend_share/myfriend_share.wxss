/* pages/myFriend/myfriend.wxss */

.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #f8f8f8;
    padding: 20rpx;
}

.list-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    height: 220rpx;
    background-color: #fff;
    border-radius: 10rpx;
    margin-bottom: 20rpx;
    box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.item-img {
    width: 28%;
    height: 95%;
    border-radius: 10px;
}

.item-info {
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    width: 68%;
    height: 100%;
    padding: 0 10rpx;
}

.item-title {
    font-size: 28rpx;
    font-weight: bold;
    color: #333;
}



.item-desc {
    font-size: 24rpx;
    color: #666;
}

.item-type {
    position: relative !important;
    float: right !important;
}

.hidden {
    visibility: hidden;
}

.show-btn {
    visibility: hidden;
}

.btn1-style {
    position: absolute !important;
    top: 35px;
    font-size: large;
    right: 20px;
}